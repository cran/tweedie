 citHeader("To cite package 'tweedie' in publications use:")
     
     desc <- packageDescription("tweedie")
     year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", desc$Date)
     vers <- paste("R package version", desc$Version)
     
     citEntry(entry="Manual",
              title = "tweedie: Tweedie exponential family models",
              author = personList(as.person("Peter K Dunn")),
              year = year,
              note = vers,
     
              textVersion =
              paste("Peter K Dunn (",
                    year,
                    "). tweedie: Tweedie exponential family models. ",
                    vers, ".", sep=""))

